<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Pages.FastOptionsPage"
             Title="FastOptionsPage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Spacing="5">
        
        <Label 
            Text="Choose your fast"
            FontSize="Large"/>

        <CollectionView ItemsSource="{Binding FastingOptions}">
 
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10,2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3"/>
                        </Border.StrokeShape>

                        <Grid Padding="10,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Name}"/>
                            <Label Grid.Column="2" Text="{Binding Description}" HorizontalTextAlignment="End" />

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>