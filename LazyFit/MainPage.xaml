<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyFit.Views"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="LazyFit.MainPage"
             Shell.NavBarIsVisible="False"
             Background="{StaticResource GithubLight}">

    <ScrollView>
        <StackLayout Orientation="Vertical" Spacing="20" Padding="0">

            <Label Text="LazyFit" Style="{StaticResource PageHeader}"/>

            <views:FastingView />

            <views:LogButtonsView />

            <micro:ChartView  Chart="{Binding mychart}" HeightRequest="250"/>


            <!--<Button Text="Results" Command="{Binding OpenResults}"/>-->


        </StackLayout>
    </ScrollView>

</ContentPage>
