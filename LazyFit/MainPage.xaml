<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyFit.Views"
             x:Class="LazyFit.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <StackLayout Orientation="Vertical" Spacing="5" Padding="5">

            <Label Text="LazyFit" Style="{StaticResource PageHeader}"/>

            <views:FastingView />

            <Button Text="Results" Command="{Binding OpenResults}"/>


        </StackLayout>
    </ScrollView>

</ContentPage>
