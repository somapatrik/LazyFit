<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyFit.Views"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="LazyFit.MainPage"
             Shell.NavBarIsVisible="False"
             Background="{StaticResource GithubLight}">

        <ScrollView>
            
            <StackLayout Orientation="Vertical" Spacing="20" Padding="0">

            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Label Text="LazyFit" Style="{StaticResource PageHeader}"/>
                
                <ImageButton Grid.Column="1" 
                             Source="chart_50.png" 
                             WidthRequest="30"
                             Margin="0,0,10,0"
                             HorizontalOptions="EndAndExpand"
                             Command="{Binding OpenResults}"/>
               
                
            </Grid>
               

                <views:FastingView />

                <views:LogButtonsView />
                
            </StackLayout>
            
        </ScrollView>

</ContentPage>
