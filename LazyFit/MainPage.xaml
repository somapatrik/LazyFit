<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyFit.Views"
             xmlns:fastViews="clr-namespace:LazyFit.Views.Fasting"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="LazyFit.MainPage"
             Shell.NavBarIsVisible="False"
             Background="{StaticResource GithubLight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Horní lišta -->
        <StackLayout Grid.Row="0" Orientation="Horizontal">
            <Label Text="LazyFit" Style="{StaticResource PageHeader}"/>
            <ImageButton Source="chart_50.png" WidthRequest="30" Margin="0,0,10,0" HorizontalOptions="EndAndExpand" Command="{Binding OpenResults}"/>
        </StackLayout>

        <!-- Obsah stránky (scrollable) -->
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Spacing="20" Padding="0">
                <!-- Váš stávající obsah zde -->
                <fastViews:FastingView />
                <views:LogButtonsView />
                <views:LatestActionsView/>
            </StackLayout>
        </ScrollView>

    </Grid>

