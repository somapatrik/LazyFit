<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Views.Reports.MainQuickView"
             xmlns:reportViewModels="clr-namespace:LazyFit.ViewModels.Reports">

    <ContentView.BindingContext>
        <reportViewModels:MainQuickViewModel/>
    </ContentView.BindingContext>


        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            
            
        <VerticalStackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="{Binding Weight}" Style="{StaticResource QuickReportValue}" />
            <Label Text="Weight" Style="{StaticResource QuickReportKey}"/>
        </VerticalStackLayout>
        
        
        <VerticalStackLayout Grid.Column="1" HorizontalOptions="CenterAndExpand">
            <HorizontalStackLayout>
                <Label Text="{Binding FastRatio}" Style="{StaticResource QuickReportValue}"/>
                <Label Text="%" Style="{StaticResource QuickReportValue}"/>
            </HorizontalStackLayout>
            <Label Text="Fasts" Style="{StaticResource QuickReportKey}"/>
        </VerticalStackLayout>
        
    </Grid>
    
    
</ContentView>
