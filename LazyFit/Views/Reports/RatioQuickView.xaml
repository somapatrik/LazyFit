<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LazyFit.ViewModels.Reports"
             x:Class="LazyFit.Views.Reports.RatioQuickView">

    <ContentView.BindingContext>
        <vm:MainQuickViewModel/>
    </ContentView.BindingContext>


    <Border>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="auto,*">
                <Label Text="1"/>
                <ProgressBar Grid.Column="1" Progress="{Binding FoodRatio}" ProgressColor="{StaticResource GithubGreen}"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
    
</ContentView>
