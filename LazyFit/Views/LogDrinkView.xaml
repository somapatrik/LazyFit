<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Views.LogDrinkView"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             Background="#80000000">

    
    <Border Background="white" VerticalOptions="End" Padding="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10,10,0,0"/>
        </Border.StrokeShape>
    <VerticalStackLayout >

        <Label Text="Log drink" 
               HorizontalTextAlignment="Center"
               Style="{StaticResource PageHeader}"/>

        <TimePicker Style="{StaticResource EntryTimePicker}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.ColumnSpan="3" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                </Border>

                <Label Grid.Column="1" Text="Drink" HorizontalTextAlignment="Center"/>

            </Grid>

        </VerticalStackLayout>
    </Border>
        
</mopup:PopupPage>
