<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Views.LogDrinkView"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups">
    
    <VerticalStackLayout Padding="10">
        <Label Text="Log drink" Style="{StaticResource PageSubHeader}"/>
        <TimePicker HorizontalOptions="Center" FontSize="Large"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="3" BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
            </Border>

            <Label Grid.Column="1" Text="Drink" HorizontalTextAlignment="Center"/>

        </Grid>
        
    </VerticalStackLayout>
</mopup:PopupPage>
