<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:LazyFit.Converters"
             x:Class="LazyFit.Views.FastingView">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Border >

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="3" />
        </Border.StrokeShape>

        <VerticalStackLayout>

            <Label 
            Text="Fasting"
            VerticalTextAlignment="Center" />

            <Label 
            Text="{Binding ActiveFast.StartTime}"
            VerticalTextAlignment="Center" />

            <Button Text="Start fast" Command="{Binding OpenFasting}" IsVisible="{Binding isFastActive,Converter={StaticResource InverseBoolConverter}}"/>


            <Button Text="Stop fast" Command="{Binding StopFasting}" IsVisible="{Binding isFastActive}"/>




        </VerticalStackLayout>

    </Border>
    
    
</ContentView>
