<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Views.FastingView">

    <Border >

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="3" />
        </Border.StrokeShape>

        <VerticalStackLayout>

        <Label 
            Text="Fasting"
            VerticalTextAlignment="Center" />

            <Label 
            Text="{Binding isFastActive}"
            VerticalTextAlignment="Center" />

            <Label 
            Text="{Binding ActiveFast.Id}"
            VerticalTextAlignment="Center" />

            <Button Text="Start fast" Command="{Binding OpenFasting}"/>


            <Button Text="Stop" IsVisible="{Binding isFastActive}"/>




        </VerticalStackLayout>

    </Border>
    
    
</ContentView>
