<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:LazyFit.Converters"
             x:Class="LazyFit.Views.FastingView">

    <Border Style="{StaticResource FastingBorder}">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>

        <VerticalStackLayout>

            <Label 
                Text="Fasting"
                VerticalTextAlignment="Start" 
                FontAttributes="None"
                TextColor="White"
                FontSize="Medium"/>

            <Label 
                Text="{Binding TimerMessage}"
                HorizontalTextAlignment="Center" 
                Padding="8"
                FontSize="Large"
                IsVisible="{Binding isFastActive}"/>

            <Label Text="{Binding ActiveFast.PlanMinutes}"/>

            <ProgressBar 
                Progress="{Binding PercentDone}" 
                ScaleY="2" 
                IsVisible="{Binding isFastActive}"/>

            
            <!--<Button Text="LetÂ´s get hungry" 
                    Command="{Binding OpenFasting}" 
                    IsVisible="{Binding isFastActive,Converter={converters:InverseBoolConverter}}"
                    CornerRadius="0"
                    FontSize="Medium"/>
            

            <Button Text="End the suffering" 
                    Command="{Binding ShowStopDialog}" 
                    IsVisible="{Binding isFastActive}" 
                    CornerRadius="0"
                    FontSize="Medium"/>-->




        </VerticalStackLayout>

    </Border>
    
    
</ContentView>
