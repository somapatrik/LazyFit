<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:views="clr-namespace:LazyFit.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LazyFit.Views.EnterWeightView"
             Background="#80000000">
    
    <Border
        Background="white"
        Padding="20"
        VerticalOptions="End">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10,10,0,0"/>
        </Border.StrokeShape>
        
        <VerticalStackLayout>

            <views:WeightChartView/>

            <Label Text="Enter weight" FontSize="Medium"/>

            <Entry Keyboard="Numeric"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   Text="{Binding entryWeight}"
                   />

            <Button 
                    Text="Save" 
                    Margin="0,20,0,0"
                    Command="{Binding SaveWeight}"/>

        </VerticalStackLayout>
    
        </Border>

</mopup:PopupPage>
