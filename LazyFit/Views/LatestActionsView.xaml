<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Convertes="clr-namespace:LazyFit.Converters"
             xmlns:viewModels="clr-namespace:LazyFit.ViewModels"
             xmlns:reportViews="clr-namespace:LazyFit.Views.Reports"
             x:Class="LazyFit.Views.LatestActionsView">

    <ContentView.BindingContext>
        <viewModels:LatestActionsViewModel/>
    </ContentView.BindingContext>

    <ContentView.Content>
        <VerticalStackLayout>

            <CollectionView ItemsSource="{Binding ActionSquares}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                    <Border Padding="10,5" 
                            StrokeThickness="0">

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.OpenDayCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>

                            <HorizontalStackLayout Background="White">

                                <Label Text="{Binding Time, Converter={Convertes:DateTimeToShortConverter}}" 
                                       VerticalTextAlignment="Center"
                                       FontSize="Medium"/>
                                
                                <FlexLayout Wrap="Wrap"
                                            BindableLayout.ItemsSource="{Binding Actions}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>

                                            <Image Source="{Binding IconName}" WidthRequest="32" Margin="1.5"/>

                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </FlexLayout>

                                <Border Style="{StaticResource Splitter}"/>

                            </HorizontalStackLayout>
                        </Border>
                </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>

        </VerticalStackLayout>
    </ContentView.Content>

</ContentView>
