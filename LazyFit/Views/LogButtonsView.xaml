<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyFit.Views.LogButtonsView"
             Background="white">
    <VerticalStackLayout>
        <Label 
                Text="Log"
                VerticalTextAlignment="Start" 
                FontAttributes="None"
                TextColor="Black"
                FontSize="Medium"
                Margin="10,5"/>
        
    <Grid Padding="10" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Text="Mood" Background="{StaticResource NexenColor}"/>

            <Button Grid.Row="1" Grid.Column="1" Text="Mood" Command="{Binding ShowLogMood}" Background="darkblue"/>
            <Button Grid.Row="1" Grid.Column="0" Text="Weight" Background="orangered"/>
            <Button Grid.Column="1" Text="Drink" Command="{Binding ShowDrink}" Background="{StaticResource BootstrapWarningBg}"/>
            <Button Grid.Column="0" Text="Food" Command="{Binding ShowFood}" Background="{StaticResource NexenColor}"/>


        </Grid>
    </VerticalStackLayout>
</ContentView>
