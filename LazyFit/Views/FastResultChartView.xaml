<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="LazyFit.Views.FastChart">

    <Grid BackgroundColor="{StaticResource White}">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Text="Fasting hours" HorizontalTextAlignment="Start" Style="{StaticResource PageSubHeader}"/>
        <micro:ChartView Grid.Row="1" Chart="{Binding FastChart}" Margin="10"/>
    </Grid>
</ContentView>
