<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyFit.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LazyFit.ResultsPage"
             Title="ResultsPage"
             Background="{StaticResource White}">

    <Page.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource White}" StatusBarStyle="DarkContent"/>
    </Page.Behaviors>

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

        <StackLayout Orientation="Vertical">
            
            <Label Text="Weekly results"
                   HorizontalTextAlignment="Center"
                   Style="{StaticResource PageHeader}"/>

            <Label Text="{Binding PeriodText}" 
                   HorizontalTextAlignment="Center"
                   Style="{StaticResource PageSubHeader}"/>
            
        </StackLayout>

        <ScrollView Grid.Row="1">

                <VerticalStackLayout Spacing="10" 
                                     Padding="15,0">

                    <views:WeightResultChart />

                <Border StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="7" />
                    </Border.StrokeShape>
                    <views:FastChart/>
                </Border>

            </VerticalStackLayout>
            
            </ScrollView>

        <!-- Controls -->
            <Grid Grid.Row="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Button Grid.Row="0" Grid.Column="0" Text="&#x2190;" FontSize="Large" Command="{Binding ShowOlder}" Style="{StaticResource TextButton}" Background="White" />
            <Button Grid.Row="0" Grid.Column="1" Text="&#x2192;" FontSize="Large" Command="{Binding ShowNewer}" Style="{StaticResource TextButton}" Background="White" />


        </Grid>

    </Grid>

</ContentPage>